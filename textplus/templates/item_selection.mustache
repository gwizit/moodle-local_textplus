{{!
    @template local_textplus/item_selection

    Item selection page template for TextPlus plugin.

    Context variables required for this template:
    * form_action - Form action URL
    * sesskey - Session key
    * select_items_message - Message prompting user to select items
    * database_header - Database section header  
    * has_items - Boolean if items exist
    * items - Array of database items with occurrences
    * select_all_label - Select all button label
    * deselect_all_label - Deselect all button label
    * warning_text - Warning text for select all
    * back_label - Back button label
    * next_label - Next button label
}}

<div class="local-textplus-item-selection">
    <form method="post" action="{{form_action}}" id="local-textplus-itemselectionform">
        <input type="hidden" name="step" value="2">
        <input type="hidden" name="sesskey" value="{{sesskey}}">

        <p class="lead">{{select_items_message}}</p>

        {{#has_items}}
        <div class="local-textplus-section-header">{{database_header}}</div>

        <div class="local-textplus-select-all-btn">
            <a href="#" id="local-textplus-select-all" class="btn btn-sm btn-secondary">{{select_all_label}}</a>
        </div>

        <div class="local-textplus-item-list">
            {{#items}}
            <div class="local-textplus-item-container">
                <input type="checkbox" name="database_items[]" value="{{item_key}}" class="local-textplus-item-checkbox" id="{{checkbox_id}}">
                <label for="{{checkbox_id}}" class="local-textplus-item-label">
                    <div class="local-textplus-item-header">
                        {{#has_url}}
                        <a href="{{url}}" target="_blank" rel="noopener noreferrer" onclick="event.stopPropagation();">{{location}}</a>
                        {{/has_url}}
                        {{^has_url}}
                        {{location}}
                        {{/has_url}}
                    </div>
                    <div class="local-textplus-item-table">{{table_info}}</div>
                    {{#has_occurrences}}
                    <div class="local-textplus-item-occurrences">
                        <strong>{{occurrence_text}} </strong>
                        {{#occurrences}}
                        <a href="#" class="local-textplus-occurrence-link" 
                           data-context="{{context}}"
                           data-match="{{match}}"
                           data-location="{{location}}"
                           data-searchterm="{{searchterm}}">#{{number}}</a>
                        {{/occurrences}}
                    </div>
                    {{/has_occurrences}}
                </label>
            </div>
            {{/items}}
        </div>

        <div class="mt-3">
            <button type="submit" name="backbtn" value="1" class="btn btn-secondary me-2">{{back_label}}</button>
            <button type="submit" name="nextbtn" value="1" class="btn btn-primary">{{next_label}}</button>
        </div>
        {{/has_items}}
    </form>
</div>

<!-- Occurrence modal -->
<div id="local-textplus-occurrence-modal" class="local-textplus-occurrence-modal">
    <div class="local-textplus-occurrence-modal-content">
        <div class="local-textplus-occurrence-modal-header">
            <h3 id="local-textplus-occurrence-modal-title">{{codesnippet_label}}</h3>
            <button type="button" class="local-textplus-occurrence-modal-close">&times;</button>
        </div>
        <div class="local-textplus-occurrence-modal-body">
            <div id="local-textplus-occurrence-modal-body-content" class="local-textplus-occurrence-code"></div>
        </div>
    </div>
</div>

{{#js}}
require(['local_textplus/item_selection', 'local_textplus/occurrence_modal'], function(ItemSelection, OccurrenceModal) {
    ItemSelection.init({
        selectAllText: '{{select_all_label}}',
        deselectAllText: '{{deselect_all_label}}',
        warningText: '{{warning_text}}'
    });
    OccurrenceModal.init();
});
{{/js}}
